<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRecordActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryLight"
        android:layout_height="220dp">
        <RelativeLayout
            android:layout_weight="0.25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryLight">
            <TableLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark">

                <TableRow android:layout_weight="1">

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@color/colorPrimary_text"
                        android:id="@+id/keyboard_one"/>

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@color/colorPrimary_text"
                        android:id="@+id/keyboard_two"/>

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="3"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@color/colorPrimary_text"
                        android:id="@+id/keyboard_three"/>

                </TableRow>
                <TableRow android:layout_weight="1">

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="4"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@color/colorPrimary_text"
                        android:id="@+id/keyboard_four"/>

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@color/colorPrimary_text"
                        android:id="@+id/keyboard_five"/>

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="6"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@color/colorPrimary_text"
                        android:id="@+id/keyboard_six"/>

                </TableRow>
                <TableRow android:layout_weight="1">

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="7"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@color/colorPrimary_text"
                        android:id="@+id/keyboard_seven"/>

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="8"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@color/colorPrimary_text"
                        android:id="@+id/keyboard_eight"/>

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="9"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@color/colorPrimary_text"
                        android:id="@+id/keyboard_nine"/>

                </TableRow>
                <TableRow android:layout_weight="1">

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary_text"
                        />

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@color/colorPrimary_text"
                        android:id="@+id/keyboard_zero"/>

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="."
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@color/colorPrimary_text"
                        android:id="@+id/keyboard_dot"/>

                </TableRow>

            </TableLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="0.75"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/keyboard_type"
                    android:text="花费"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>
                <ImageButton
                    android:id="@+id/keyboard_backspace"
                    android:src="@drawable/baseline_backspace_24"
                    android:background="@color/colorPrimary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/keyboard_done"
                    android:src="@drawable/baseline_done_24"
                    android:background="@color/colorPrimary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_above="@id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_amount"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="0.00"
            android:textColor="@color/colorIcons"
            android:textSize="60dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/textView_amount"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_edit_text"
            android:paddingLeft="10dp"
            android:text="Book"
            android:textColor="@color/colorIcons"
            android:textSize="30dp"
            android:textStyle="normal" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_margin="10dp"
            android:layout_below="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</RelativeLayout>